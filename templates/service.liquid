{% block scripts %}
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
	<script src="http://gregfranko.com/jquery.selectBoxIt.js/js/jquery.selectBoxIt.min.js"></script>
	<script>
	(function(){

		var selectBox = $("#jobOffice").selectBoxIt({
			showFirstOption: true,
			defaultText: "Spine Services",
			downArrowIcon: "fa fa-chevron-down fa-2x",
			nativeMousedown: false,
			autowidth: true,
			showEffect: "fadeIn",
    	showEffectSpeed: 400,
    	hideEffect: "fadeOut",
    	hideEffectSpeed: 400
		});

		$("select#jobOffice").bind({
		      "open": function() {
				  // console.log("click");
		       $("#jobOfficeSelectBoxItOptions").slideDown(500, 'easeOutQuint');
		      },
		      "close": function() {
				  // console.log("cclose");
		       $( "#jobOfficeSelectBoxItOptions").fadeOut( "fast");
			  }
		});


		//Adjust the height of the spine header depending on content length
