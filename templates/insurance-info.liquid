{% block scripts %}
 <script>
 (function(){

	var form = $('.insurance-type input');

	//Tooltips
	 var windowWidth = $(window).width();
	 var width = 769;
	 if( windowWidth > width){
		 var tipLength = 0;

		 $('.insurance-type').children('label').each(function(){
			 tipLength += 1;
		 });

		 for(var i= 1;i <= tipLength; i++){
			 mouseEnter(i);
			 mouseLeave(i);
		 }

		 function mouseEnter(i){
			 return $('#tooltip' + i).mouseenter(function(){
				 $('[data-toggle="popover' + i + '"]').popover('show');
			 });
		 }

		 function mouseLeave(i){
			 return $('#tooltip' + i).mouseleave(function(){
				 $('[data-toggle="popover' + i + '"]').popover('hide');
			 });
		 }
	 }


	//remove active from other elements
	function selectRadio(elem){

		$(elem).parent('label').parent('.insurance-type').children('label').each( function(index, el){
		 $(el).removeClass('active');
		});
		//add class
		$(elem).parent('label').addClass('active');

	}

	form.change(function(event) {
		selectRadio(this);
	});


 })();
</script>
{% endblock %}
